@model VoitureModel
@{
    ViewData["Title"] = "Ajouter une Voiture";
}

<div>
    <h1 class="text-center">Ajouter une voiture</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="Create" method="post">
            <div class="form-group row">
                <label asp-for="@Model.Marque" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Marque" class="form-control" />
                    <span asp-validation-for="@Model.Marque" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <label asp-for="@Model.Modele" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Modele" class="form-control" />
                    <span asp-validation-for="@Model.Modele" class="text-danger"></span>
                </div>
            </div>
  
            <div class="form-group row">
                <label asp-for="@Model.CodeVin" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.CodeVin" class="form-control" />
                    <span asp-validation-for="@Model.CodeVin" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <label asp-for="@Model.Annee" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Annee" class="form-control" />
                    <span asp-validation-for="@Model.Annee" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <label asp-for="@Model.Finition" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Finition" class="form-control" />
                    <span asp-validation-for="@Model.Finition" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>

            </div>

        </form>
    </div>
</div>
