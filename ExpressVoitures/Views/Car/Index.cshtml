@model VoitureModel
@{
    ViewData["Title"] = "Index";
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();
    string actionString = "Create";
}

@if (actionName == "Read" || actionName == "Update") {
    actionString = "Update"; 
} 

<div>
    <h1 class="text-center">Ajouter une voiture</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Car" asp-action="@actionString" method="post">
            <div class="form-group row">
                <label asp-for="Marque" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Marque" class="form-control" />
                    <span asp-validation-for="Marque" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Modele" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Modele" class="form-control" />
                    <span asp-validation-for="Modele" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CodeVin" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="CodeVin" class="form-control" />
                    <span asp-validation-for="CodeVin" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Annee" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Annee" class="form-control" />
                    <span asp-validation-for="Annee" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Finition" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Finition" class="form-control" />
                    <span asp-validation-for="Finition" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary"> @actionString </button>
                </div>
            </div>
        </form>
    </div>
</div>
